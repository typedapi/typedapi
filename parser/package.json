        "typedoc": "^0.19.2",
        "typescript": "^4.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "@typescript-eslint/eslint-plugin": "^4.15.2",
        "@typescript-eslint/parser": "^4.15.2",
        "eslint": "^7.20.0",
        "jest": "^26.6.3",
        "nodemon": "^2.0.6",
        "ts-jest": "^26.4.4",
        "typedapi-core": "file:../core",
